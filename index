    <script>
        let userName = '';
        let userLocation = '';
        let weatherData = null;
        let locationCoords = { lat: 0, lon: 0 };
        let map = null;
        let marker = null;
        
        const loginScreen = document.getElementById('loginScreen');
        const dashboard = document.getElementById('dashboard');
        const nameInput = document.getElementById('nameInput');
        const locationInput = document.getElementById('locationInput');
        const loginBtn = document.getElementById('loginBtn');
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsPanel = document.getElementById('settingsPanel');
        const newLocationInput = document.getElementById('newLocationInput');
        const updateLocationBtn = document.getElementById('updateLocationBtn');
        const refreshBtn = document.getElementById('refreshBtn');
        
        function loadFromStorage() {
            const savedName = localStorage.getItem('userName');
            const savedLocation = localStorage.getItem('userLocation');
            
            if (savedName && savedLocation) {
                userName = savedName;
                userLocation = savedLocation;
                showDashboard();
                fetchAllData();
            }
        }
        
        function saveToStorage() {
            localStorage.setItem('userName', userName);
            localStorage.setItem('userLocation', userLocation);
        }
        
        async function fetchAllData() {
            try {
                await geocodeLocation(userLocation);
                await fetchWeather();
                await fetchRiverData();
                await fetchFloodWarnings();
                updateDisplay();
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }
        
        async function geocodeLocation(location) {
            try {
                const response = await fetch(
                    `https://geocoding-api.open-meteo.com/v1/search?name=${encodeURIComponent(location)}&count=1&language=en&format=json`
                );
                const data = await response.json();
                
                if (data.results && data.results.length > 0) {
                    locationCoords.lat = data.results[0].latitude;
                    locationCoords.lon = data.results[0].longitude;
                    
                    if (!map) {
                        map = L.map('map').setView([locationCoords.lat, locationCoords.lon], 10);
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '¬© OpenStreetMap'
                        }).addTo(map);
                    } else {
                        map.setView([locationCoords.lat, locationCoords.lon], 10);
                    }
                    
                    if (marker) {
                        map.removeLayer(marker);
                    }
                    
                    marker = L.marker([locationCoords.lat, locationCoords.lon]).addTo(map);
                    marker.bindPopup(`<b>${userLocation}</b>`).openPopup();
                    
                    return true;
                } else {
                    alert('Location not found. Please try again.');
                    return false;
                }
            } catch (error) {
                console.error('Geocoding error:', error);
                return false;
            }
        }
        
        async function fetchWeather() {
            try {
                const response = await fetch(
                    `https://api.open-meteo.com/v1/forecast?latitude=${locationCoords.lat}&longitude=${locationCoords.lon}&current=temperature_2m,relative_humidity_2m,apparent_temperature,weather_code,wind_speed_10m&daily=temperature_2m_max,temperature_2m_min,uv_index_max&timezone=auto`
                );
                
                const airResponse = await fetch(
                    `https://air-quality-api.open-meteo.com/v1/air-quality?latitude=${locationCoords.lat}&longitude=${locationCoords.lon}&current=pm10,pm2_5,nitrogen_dioxide,ozone,european_aqi&timezone=auto`
                );
                
                const data = await response.json();
                const airData = await airResponse.json();
                
                weatherData = {
                    temp: Math.round(data.current.temperature_2m),
                    feelsLike: Math.round(data.current.apparent_temperature),
                    humidity: data.current.relative_humidity_2m,
                    windSpeed: Math.round(data.current.wind_speed_10m),
                    weatherCode: data.current.weather_code,
                    maxTemp: Math.round(data.daily.temperature_2m_max[0]),
                    minTemp: Math.round(data.daily.temperature_2m_min[0]),
                    uvIndex: Math.round(data.daily.uv_index_max[0]),
                    aqi: airData.current.european_aqi || 0,
                    pm25: (airData.current.pm2_5 || 0).toFixed(1),
                    pm10: (airData.current.pm10 || 0).toFixed(1),
                    no2: (airData.current.nitrogen_dioxide || 0).toFixed(1),
                    o3: (airData.current.ozone || 0).toFixed(1)
                };
            } catch (error) {
                console.error('Weather fetch error:', error);
            }
        }
        
        async function fetchRiverData() {
            try {
                const response = await fetch('https://environment.data.gov.uk/flood-monitoring/id/stations?_limit=10');
                const data = await response.json();
                
                const riverHTML = data.items.slice(0, 5).map(station => {
                    const level = station.measures ? 'Active' : 'N/A';
                    return `
                        <div style="margin-bottom: 12px; padding-bottom: 8px; border-bottom: 1px solid rgba(59, 130, 246, 0.2);">
                            <div style="font-weight: bold; color: #3b82f6;">${station.label || 'River Station'}</div>
                            <div style="font-size: 10px; color: #06b6d4;">Station: ${station.stationReference || 'Unknown'}</div>
                            <div style="font-size: 10px; margin-top: 4px;">
                                <span style="padding: 2px 8px; background: #22c55e; color: black; font-weight: bold; border-radius: 2px;">MONITORING</span>
                            </div>
                        </div>
                    `;
                }).join('');
                
                document.getElementById('riverData').innerHTML = riverHTML || '<div>No river data available for this area</div>';
            } catch (error) {
                console.error('River data error:', error);
                document.getElementById('riverData').innerHTML = '<div class="text-orange">Unable to load river data</div>';
            }
        }
        
        async function fetchFloodWarnings() {
            try {
                const response = await fetch('https://environment.data.gov.uk/flood-monitoring/id/floods');
                const data = await response.json();
                
                const warnings = data.items.slice(0, 3);
                
                if (warnings.length > 0) {
                    const floodHTML = warnings.map(warning => {
                        return `
                            <div style="margin-bottom: 8px; padding: 8px; background: rgba(239, 68, 68, 0.2); border-radius: 4px;">
                                <div style="font-weight: bold; color: #ef4444;">${warning.description || 'Flood Warning'}</div>
                                <div style="font-size: 10px; color: #f97316; margin-top: 4px;">${warning.message || 'Please stay alert'}</div>
                            </div>
                        `;
                    }).join('');
                    
                    document.getElementById('floodData').innerHTML = floodHTML;
                } else {
                    document.getElementById('floodData').innerHTML = `
                        <div style="display: flex; align-items: center; gap: 8px;">
                            <div style="width: 12px; height: 12px; background: #22c55e; border-radius: 50%;"></div>
                            <div style="color: #22c55e; font-weight: bold;">NO ACTIVE FLOOD WARNINGS</div>
                        </div>
                        <div style="color: #22c55e; margin-top: 8px;">All monitored areas are at normal levels</div>
                    `;
                }
            } catch (error) {
                console.error('Flood warning error:', error);
                document.getElementById('floodData').innerHTML = '<div class="text-orange">Unable to load flood warnings</div>';
            }
        }
        
        function getWeatherDescription(code) {
            const codes = {
                0: 'Clear sky', 1: 'Mainly clear', 2: 'Partly cloudy', 3: 'Overcast',
                45: 'Foggy', 48: 'Rime fog', 51: 'Light drizzle', 53: 'Drizzle',
                55: 'Heavy drizzle', 61: 'Light rain', 63: 'Rain', 65: 'Heavy rain',
                71: 'Light snow', 73: 'Snow', 75: 'Heavy snow', 95: 'Thunderstorm'
            };
            return codes[code] || 'Unknown';
        }
        
        function getAQILevel(aqi) {
            if (aqi <= 20) return { level: 'EXCELLENT', color: 'linear-gradient(90deg, #22c55e, #10b981)' };
            if (aqi <= 40) return { level: 'GOOD', color: 'linear-gradient(90deg, #84cc16, #22c55e)' };
            if (aqi <= 60) return { level: 'MODERATE', color: 'linear-gradient(90deg, #eab308, #f97316)' };
            if (aqi <= 80) return { level: 'POOR', color: 'linear-gradient(90deg, #f97316, #ef4444)' };
            return { level: 'HAZARDOUS', color: 'linear-gradient(90deg, #ef4444, #991b1b)' };
        }
        
        function updateDisplay() {
            if (!weatherData) return;
            
            const now = new Date();
            document.getElementById('timeDisplay').textContent = now.toLocaleTimeString('en-GB');
            document.getElementById('dateDisplay').textContent = now.toLocaleDateString('en-GB', { 
                weekday: 'short', month: 'short', day: 'numeric' 
            });
            document.getElementById('updateTime').textContent = now.toLocaleTimeString('en-GB');
            
            document.getElementById('displayName').textContent = userName.toUpperCase();
            document.getElementById('displayLocation').textContent = userLocation.toUpperCase();
            
            document.getElementById('tempMain').textContent = weatherData.temp + '¬∞';
            document.getElementById('tempFeels').textContent = weatherData.feelsLike + '¬∞C';
            document.getElementById('tempHigh').textContent = weatherData.maxTemp + '¬∞C';
            document.getElementById('tempLow').textContent = weatherData.minTemp + '¬∞C';
            
            document.getElementById('conditions').textContent = getWeatherDescription(weatherData.weatherCode);
            document.getElementById('humidity').textContent = weatherData.humidity + '%';
            document.getElementById('wind').textContent = weatherData.windSpeed + ' km/h';
            document.getElementById('uv').textContent = weatherData.uvIndex;
            
            const aqiInfo = getAQILevel(weatherData.aqi);
            document.getElementById('aqiNumber').textContent = weatherData.aqi;
            const aqiBadge = document.getElementById('aqiBadge');
            aqiBadge.textContent = aqiInfo.level;
            aqiBadge.style.background = aqiInfo.color;
            
            document.getElementById('pm25').textContent = weatherData.pm25;
            document.getElementById('pm10').textContent = weatherData.pm10;
            document.getElementById('o3').textContent = weatherData.o3;
            document.getElementById('no2').textContent = weatherData.no2;
            
            document.getElementById('mapLocation').textContent = userLocation.toUpperCase();
            document.getElementById('mapCoords').textContent = `${locationCoords.lat.toFixed(4)}¬∞, ${locationCoords.lon.toFixed(4)}¬∞`;
            
            const alertsContainer = document.getElementById('alertsContainer');
            alertsContainer.innerHTML = '';
            
            if (weatherData.uvIndex > 6) {
                alertsContainer.innerHTML += `
                    <div class="alert-box" style="background: rgba(234, 179, 8, 0.2); border-color: #eab308; color: #eab308;">
                        ‚ö° HIGH UV INDEX
                    </div>
                `;
            }
            
            if (weatherData.aqi > 60) {
                alertsContainer.innerHTML += `
                    <div class="alert-box" style="background: rgba(249, 115, 22, 0.2); border-color: #f97316; color: #f97316;">
                        üëÅÔ∏è POOR AIR QUALITY
                    </div>
                `;
            }
            
            if (weatherData.windSpeed > 40) {
                alertsContainer.innerHTML += `
                    <div class="alert-box" style="background: rgba(239, 68, 68, 0.2); border-color: #ef4444; color: #ef4444;">
                        üí® HIGH WIND WARNING
                    </div>
                `;
            }
            
            if (weatherData.uvIndex <= 6 && weatherData.aqi <= 60 && weatherData.windSpeed <= 40) {
                alertsContainer.innerHTML += `
                    <div class="alert-box" style="background: rgba(34, 197, 94, 0.2); border-color: #22c55e; color: #22c55e;">
                        üìä ALL SYSTEMS NOMINAL
                    </div>
                `;
            }
        }
        
        function showDashboard() {
            loginScreen.classList.add('hidden');
            dashboard.classList.remove('hidden');
            setInterval(() => {
                const now = new Date();
                document.getElementById('timeDisplay').textContent = now.toLocaleTimeString('en-GB');
                document.getElementById('dateDisplay').textContent = now.toLocaleDateString('en-GB', { 
                    weekday: 'short', month: 'short', day: 'numeric' 
                });
            }, 1000);
        }
        
        loginBtn.addEventListener('click', async function() {
            console.log('Button clicked');
            const name = nameInput.value.trim();
            const loc = locationInput.value.trim();
            
            console.log('Name:', name, 'Location:', loc);
            
            if (name && loc) {
                loginBtn.disabled = true;
                loginBtn.textContent = 'INITIALIZING...';
                
                userName = name;
                userLocation = loc;
                saveToStorage();
                
                try {
                    const success = await geocodeLocation(userLocation);
                    if (success) {
                        showDashboard();
                        await fetchAllData();
                    } else {
                        loginBtn.disabled = false;
                        loginBtn.textContent = 'ACCESS TERMINAL >>';
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    alert('Error: ' + error.message);
                    loginBtn.disabled = false;
                    loginBtn.textContent = 'ACCESS TERMINAL >>';
                }
            } else {
                alert('Please enter both name and location');
            }
        });
        
        nameInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') loginBtn.click();
        });
        
        locationInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') loginBtn.click();
        });
        
        settingsBtn.addEventListener('click', () => {
            settingsPanel.classList.toggle('hidden');
        });
        
        updateLocationBtn.addEventListener('click', async () => {
            if (newLocationInput.value.trim()) {
                userLocation = newLocationInput.value.trim();
                saveToStorage();
                settingsPanel.classList.add('hidden');
                newLocationInput.value = '';
                await fetchAllData();
            }
        });
        
        newLocationInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') updateLocationBtn.click();
        });
        
        refreshBtn.addEventListener('click', async () => {
            refreshBtn.disabled = true;
            refreshBtn.textContent = 'UPDATING...';
            await fetchAllData();
            refreshBtn.disabled = false;
            refreshBtn.textContent = 'REFRESH';
        });
        
        loadFromStorage();
    </script>
</body>
</html>
